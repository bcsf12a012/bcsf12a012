@using MvcApplication1.Models
@model User

@{
    ViewBag.Title = "Update Form";
    Layout = "~/Views/Shared/UserNavBar.cshtml";
    
}

<body style=" color: black;">

    
    <div style="margin-left:30%;margin-top:5%;color: darkblue; border: solid" class="container well well-sm col-lg-4" >
        <form method="post" action="/User/Update1/@Model.Id">
            <label>Name:</label><input type="text" name="name" value="@Model.Name" /><br /><br />
            
            <label>Password:</label><input type="text" name="password" value="@Model.Password" /><br /><br />
            <label>Address:</label><input type="text" name="address" value="@Model.Address" /><br /><br />

            <div class="form-group" style="margin-left: 25%">
                <input type="submit" value="Update" class="btn btn-success" />

            </div>
        </form>
    </div>

</body>