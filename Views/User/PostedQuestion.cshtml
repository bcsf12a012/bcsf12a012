@using MvcApplication1.Models
@model IEnumerable<UserQuestion>

@{
    ViewBag.Title = "View Questions";
    Layout = "~/Views/Shared/UserNavBar.cshtml";
}


<body style=" color: black;">
   
     <div>
  
        <div class="container well well-sm col-lg-6" style="margin-left:20%">
            
            <table class ="table" style="border:solid">
                <thead>
                    <tr class="btn-primary" style="text-align:center">
                        <th>ID</th>
                        <th>Title</th>
                        <th>View Full</th>
                        
                    </tr>
                </thead>

                @foreach(UserQuestion obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Title</td>
                        <td><a href="/User/detailQuestion/@obj.Id"><input type="submit" value="View" class="btn btn-primary hvr-bounce-in" /></a></td>
                       
                    </tr>
                }

                </table>
                
</div>
    </div>
</body>