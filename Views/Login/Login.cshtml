@using MvcApplication1.Models
@model User

@{

    ViewBag.Title = "Login";
}
<body style=" color: darkkhaki;">
  
    <div class="container well well-sm col-lg-4" style="margin-left:25%">
        <div style="margin-left:30%">

            <h2 class="text-success"><strong>Welcome</strong></h2><br />
        </div>
        <div>
            @using (Html.BeginForm("userExit", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            { 
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/jqueryui")
                    @Scripts.Render("~/bundles/jqueryval")
                <div class="form-group">
                    @Html.LabelFor(x => x.Username, new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Username, new { @placeholder = "Enter unique Name" })
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Password, new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Password, new { @type = "password" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                
                <div class="form-group" style="margin-left: 25%">
                    
                    <input type="submit" value="Login" class="btn btn-success" />

                    @Html.ActionLink("Not Registerd? Register", "createAccount", "Login")
                    <h3>@ViewBag.message </h3>
                </div>


            
            }
        </div>
    </div>
  
      
</body>

